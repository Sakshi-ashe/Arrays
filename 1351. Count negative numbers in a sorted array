//app 1  :binary search  r*logc   0ms , 47mb

class Solution {
    public int countNegatives(int[][] grid) {
    
        int c = grid[0].length; 
        
        int count = 0;
        
        for(int i=0 ; i<grid.length ; i++){
            
            int IStartingNegative = binarySearch(grid[i],0,c-1);
            count  += c-IStartingNegative;
            
        }
        
        
        return count;
        
    }
    
    
    public static int binarySearch(int[] arr, int l , int h){
        
        while(l<=h){
            
            int m = l + (h - l) / 2; 
              
            if(arr[m] >= 0){
                l= m+1;
            }
            else if(arr[m] < 0){
                h = m-1;
            }
            
        }
        
        return l;
        
        
    }
}


 //app 2: stair case r+c

class Solution {
    public int countNegatives(int[][] grid) {
        int cL = grid[0].length ; 
        int rL = grid.length ;
        
        int r = rL-1;
        int c = 0;
        
        int count = 0;
        
       
        while(r>=0 && c<cL){
            
            if(grid[r][c] >= 0){
                c++;
            }
            else{
                r--;
                count += cL-c;
            }
        }
        
        
        return count;
        
    }

}
    
    
   
